<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSlide1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:id="@+id/slide_two_title"
        android:gravity="center_horizontal"
        android:text="@string/slide_1_title"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/slide_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slide_two_title"
        android:layout_marginTop="34dp"
        android:gravity="center_horizontal"
        android:text="@string/visitors_name"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="normal"
        app:layout_constraintTop_toBottomOf="@+id/slide_two_title"
        tools:layout_editor_absoluteX="0dp"
        />

</android.support.constraint.ConstraintLayout>